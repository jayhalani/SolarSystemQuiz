                    <TextView
                        style="@style/QuestionTextView"
                        android:text="@string/question_1" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/button_group_1"
                    style="@style/AnswerGroup">

                    <RadioButton
                        style="@style/AnswerRadioButton"
                        android:text="@string/answer_1_1" />

                    <RadioButton
                        style="@style/AnswerRadioButton"
                        android:text="@string/answer_1_2" />

                    <RadioButton
                        android:id="@+id/answer1"
                        style="@style/AnswerRadioButton"
                        android:text="@string/answer_1_3" />

                    <RadioButton
                        style="@style/AnswerRadioButton"
                        android:text="@string/answer_1_4" />

                </RadioGroup>

            </LinearLayout>

            <!-- Quiz Question 2-->

